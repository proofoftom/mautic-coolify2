# ============================================
# Database Configuration (MySQL 8.0)
# ============================================
MYSQL_DATABASE=mautic
MYSQL_HOST=mysql
MYSQL_PORT=3306

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_DEFAULT_VHOST=mautic

# ============================================
# Mautic Configuration
# ============================================
# Run database migrations on startup (set to true for initial install)
MAUTIC_RUN_MIGRATIONS=false

# Load test data (only for testing)
MAUTIC_LOAD_TEST_DATA=false

# Messenger DSN for email queue (AMQP)
# Format: amqp://user:pass@host:port/vhost/messages
MAUTIC_MESSENGER_DSN_EMAIL=amqp://mautic:password@rabbitmq:5672/mautic/messages

# Messenger DSN for hit tracking (AMQP)
MAUTIC_MESSENGER_DSN_HIT=amqp://mautic:password@rabbitmq:5672/mautic/messages

# Worker configuration
DOCKER_MAUTIC_WORKERS_CONSUME_EMAIL=2
DOCKER_MAUTIC_WORKERS_CONSUME_HIT=2
DOCKER_MAUTIC_WORKERS_CONSUME_FAILED=2

# ============================================
# PHP Configuration
# ============================================
PHP_INI_VALUE_DATE_TIMEZONE=UTC
PHP_INI_VALUE_MEMORY_LIMIT=512M
PHP_INI_VALUE_UPLOAD_MAX_FILESIZE=512M
PHP_INI_VALUE_POST_MAX_FILESIZE=512M
PHP_INI_VALUE_MAX_EXECUTION_TIME=300

# ============================================
# Debug Mode
# ============================================
DEBUG=false

# ============================================
# Docker Compose Project Name
# ============================================
COMPOSE_PROJECT_NAME=mautic-coolify
